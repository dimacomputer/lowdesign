      "notes": "Prefer outline for accessibility"
    },
    {
      "preset_id": "disabled-1",
      "category": "system",
      "transition_duration_token": "duration-instant",
      "transition_ease_token": "ease-standard",
      "transition_delay_token": "",
      "properties": "opacity|filter",
      "values": "var(--ld-motion-opacity-disabled)|grayscale(20%)",
      "notes": "Keep subtle; avoid heavy filters"
    },
    {
      "preset_id": "selected-1",
      "category": "interactive",
      "transition_duration_token": "duration-base",
      "transition_ease_token": "ease-standard",
      "transition_delay_token": "",
      "properties": "box-shadow",
      "values": "var(--ld-shadow-3)",
      "notes": "Selected emphasis without movement"
    },
    {
      "preset_id": "enter-fade-up-1",
      "category": "presence",
      "transition_duration_token": "duration-slow",
      "transition_ease_token": "ease-decelerate",
      "transition_delay_token": "",
      "properties": "opacity|transform",
      "values": "1|translateY(0)",
      "notes": "Enter end-state (used with presence rules)"
    },
    {
      "preset_id": "exit-fade-down-1",
      "category": "presence",
      "transition_duration_token": "duration-fast",
      "transition_ease_token": "ease-accelerate",
      "transition_delay_token": "",
      "properties": "opacity|transform",
      "values": "0|translateY(var(--ld-motion-distance-2))",
      "notes": "Exit end-state"
    }
  ],
  "interaction_rules": [
    {
      "state": "disabled",
      "priority": 100,
      "is_persistent": true,
      "selector_css": "[aria-disabled='true'], :disabled",
      "applies_to": "all",
      "notes": "Disabled overrides everything"
    },
    {
      "state": "pressed",
      "priority": 80,
      "is_persistent": false,
      "selector_css": ":active",
      "applies_to": "interactive",
      "notes": "Pressed overrides hover/focus for pointer"
    },
    {
      "state": "hover",
      "priority": 60,
      "is_persistent": false,
      "selector_css": ":hover",
      "applies_to": "interactive",
      "notes": "Hover base"
    },
    {
      "state": "focus",
      "priority": 70,
      "is_persistent": false,
      "selector_css": ":focus-visible",
      "applies_to": "interactive",
      "notes": "Focus should be strong; priority between hover and pressed (adjust if needed)"
    },
    {
      "state": "selected",
      "priority": 75,
      "is_persistent": true,
      "selector_css": "[data-state~='selected'], [aria-selected='true']",
      "applies_to": "interactive",
      "notes": "Persistent selection"
    },
    {
      "state": "open",
      "priority": 76,
      "is_persistent": true,
      "selector_css": "[data-state~='open'], [aria-expanded='true']",
      "applies_to": "containers",
      "notes": "For disclosure components"
    }
  ],
