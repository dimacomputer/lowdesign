  "motion_presets": [
    {
      "preset_id": "hover-lift-1",
      "category": "interactive",
      "transition_duration_token": "duration-base",
      "transition_ease_token": "ease-standard",
      "transition_delay_token": "",
      "properties": "transform|box-shadow",
      "values": "translateY(calc(var(--ld-motion-distance-1) * -1))|var(--ld-shadow-2)",
      "notes": "Lift + shadow up (shadow token comes from form layer)"
    },
    {
      "preset_id": "press-1",
